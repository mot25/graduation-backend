{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/root/src",
  "root": "apps/root",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/root/tsconfig.app.json"
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "root": {
      "type": "application",
      "root": "apps/root",
      "sourceRoot": "./",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/root/tsconfig.app.json",
        "assets": [
          {
            "include": "proto/*.proto",
            "outDir": "dist/apps/root/proto",
            "watchAssets": true
          },
          {
            "include": "env/root/.dev.env",
            "outDir": "dist/apps",
            "watchAssets": true
          },
          {
            "include": "env/root/.prod.env",
            "outDir": "dist/apps",
            "watchAssets": true
          }
        ]
      }
    },
    "files": {
      "type": "application",
      "root": "apps/files",
      "sourceRoot": "./",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/files/tsconfig.app.json",
        "assets": [
          {
            "include": "proto/*.proto",
            "outDir": "dist/apps/files/proto",
            "watchAssets": true
          },
          {
            "include": "env/files/.dev.env",
            "outDir": "dist/apps",
            "watchAssets": true
          },
          {
            "include": "env/files/.prod.env",
            "outDir": "dist/apps",
            "watchAssets": true
          }
        ]
      }
    },
    "cms": {
      "type": "application",
      "root": "apps/cms",
      "sourceRoot": "./",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/cms/tsconfig.app.json",
        "assets": [
          {
            "include": "proto/*.proto",
            "outDir": "dist/apps/cms/proto",
            "watchAssets": true
          },
          {
            "include": "env/cms/.dev.env",
            "outDir": "dist/apps",
            "watchAssets": true
          },
          {
            "include": "env/cms/.prod.env",
            "outDir": "dist/apps",
            "watchAssets": true
          }
        ]
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "sourceRoot": "./",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json",
        "assets": [
          {
            "include": "proto/*.proto",
            "outDir": "dist/apps/auth/proto",
            "watchAssets": true
          },
          {
            "include": "env/auth/.dev.env",
            "outDir": "dist/apps",
            "watchAssets": true
          },
          {
            "include": "env/auth/.prod.env",
            "outDir": "dist/apps",
            "watchAssets": true
          }
        ]
      }
    },
    "events": {
      "type": "application",
      "root": "apps/events",
      "entryFile": "main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/events/tsconfig.app.json",
        "assets": [
          {
            "include": "proto/*.proto",
            "outDir": "dist/apps/events/proto",
            "watchAssets": true
          },
          {
            "include": "env/events/.dev.env",
            "outDir": "dist/apps",
            "watchAssets": true
          },
          {
            "include": "env/events/.prod.env",
            "outDir": "dist/apps",
            "watchAssets": true
          }
        ]
      }
    }
  }
}